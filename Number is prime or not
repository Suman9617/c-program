
#include <stdio.h>
int main()
{
    int a, b;
    printf("Enter the value\n");
    if (a == 0 || a == 1)
        printf("number is not prime \n");
    else if (a == 2)
    {
        scanf("%d", &a);
        printf(" number is prime\n");
    }

    else

        for (b = 2; b < a; b++)
        {
            if (a % b == 0 || a == 0 || a == 1)
                printf("number is not prime\n");

            else
                printf(" number is prime\n");

            break;
        }
    return 0;
}
